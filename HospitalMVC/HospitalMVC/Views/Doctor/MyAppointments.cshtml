@model List<HospitalMVC.Models.AppointmentDto>

@{
    ViewData["Title"] = "My Appointments";
}

<h2 class="mt-4 mb-3 text-center">My Appointments</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No appointments found.</div>
}
else
{
    <table class="table table-bordered table-striped text-center shadow-sm" style="border-radius: 8px; overflow: hidden;">
        <thead class="table-dark">
            <tr>
                <th>Appointment ID</th>
                <th>Patient Name</th>
                <th>Date</th>
                <th>Reason</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.AppointmentID</td>
                    <td>@appointment.PatientName</td>
                    <td>@appointment.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@appointment.Reason</td>
                    <td>
                        <span class="badge
                            @(appointment.Status.ToLower() == "cancelled" ? "bg-danger" :
                              appointment.Status.ToLower() == "accepted" ? "bg-secondary" :
                              appointment.Status.ToLower() == "pending" ? "bg-warning text-dark" :
                              "bg-light text-dark")">
                            @appointment.Status
                        </span>
                    </td>
                    <td>
                        @if (appointment.Status == "Pending")
                        {
                            <div class="d-flex justify-content-center gap-2">
                                <form asp-controller="Doctor" asp-action="ConfirmAppointment" method="post">
                                    <input type="hidden" name="id" value="@appointment.AppointmentID" />
                                    <button type="submit" class="btn btn-success btn-sm">Accept</button>
                                </form>
                                <form asp-controller="Doctor" asp-action="RejectAppointment" method="post">
                                    <input type="hidden" name="id" value="@appointment.AppointmentID" />
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <span class="text-primary fw-bold">Completed</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

