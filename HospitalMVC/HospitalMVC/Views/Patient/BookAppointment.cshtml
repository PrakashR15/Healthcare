@model HospitalMVC.Models.AppointmentDto


@{
    ViewBag.Title = "Book Appointment";
    var doctors = ViewBag.Doctors as List<DoctorOption> ?? new List<DoctorOption>();
}

<h2 class="mt-4 mb-4">Book Appointment</h2>

<!-- Success Message -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<!-- Error Message -->
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<!-- Appointment Booking Form -->
<form asp-action="BookAppointment" method="post" class="needs-validation" novalidate>
    <div class="form-group mb-3">
        <label asp-for="DoctorID" class="form-label">Select Doctor</label>
        <select asp-for="DoctorID" class="form-control" required>
            <option value="">-- Choose Doctor --</option>
            @foreach (var doc in doctors)
            {
                <option value="@doc.Id">@doc.FullName</option>
            }
        </select>
        <span asp-validation-for="DoctorID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Date" class="form-label">Date & Time</label>
        <input asp-for="Date" class="form-control" type="datetime-local"
               value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")"
               min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Reason" class="form-label">Reason</label>
        <textarea asp-for="Reason" class="form-control" rows="3" required></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <!-- Hidden Status field -->
    <input type="hidden" asp-for="Status" value="Pending" />

    <button type="submit" class="btn btn-primary">Book Appointment</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
