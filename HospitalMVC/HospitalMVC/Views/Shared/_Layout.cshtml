@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">HospitalMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @{
                            var role = HttpContextAccessor.HttpContext.Session.GetString("role");
                            var userId = HttpContextAccessor.HttpContext.Session.GetString("userId");
                        }

                        @if (string.IsNullOrEmpty(role))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                        }
                        else if (role == "Doctor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="MyAppointments">My Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Auth" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else if (role == "Patient")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Patient" asp-action="BookAppointment">Book</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Patient" asp-action="AppointmentHistory">History</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Auth" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer bg-white text-center py-3 mt-5 border-top">
        <div class="container">
            <span class="text-muted">&copy; 2025 - HospitalMVC</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>





